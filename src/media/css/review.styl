@import 'lib';

$iconSize = 56px;
[data-page-type~="review"] .page {
    .review-table {
        border-collapse: separate; 
        width: 100%;
        
        thead tr th {
            text-align: left;
            padding-bottom: 10px;
        }

        tbody td {
            padding: 5px 0;
            &:not(:last-child) {
                padding-right: 10px;
            }
        }

        .review-title {
            padding: 12px 0;
            .game-icon {
                background: no-repeat;
                background-size: contain;
                float: left;
                margin-right: 10px;
                height: $iconSize;
                width: $iconSize;
            }
            .game-title {
                display: inline-block;
                height: $iconSize;
                a {
                    color: $buttonColorTeal;
                    font-size: $bigFontSize;
                    line-height: $iconSize;
                }
            }
        }

        .submitted-title {
            color: $colorGrayUltraLight;
            font-size: $smallFontSize;
        }
        .submitted-date {
            .date-abs {
                font-weight: 600;
            }
            .date-rel {
                color: $colorGrayUltraLight;
                margin-left: 3px;
            }
        }

        .review-buttons {
            text-align: right;
            a {
                margin-left: 8px;
                margin-right: 8px;
            }
            .secondary-buttons {
                display: inline-block;
                margin-left: 10px;
                font-size: 1.25em;
                vertical-align: middle;
            }

            .review-view {
                darken-text-on-hover($buttonColorBlue, $buttonHoverStateDarken);
            }
            .review-edit {
                darken-text-on-hover($buttonColorTeal, $buttonHoverStateDarken);
            }
            .review-delete {
                darken-text-on-hover($buttonColorRed, $buttonHoverStateDarken);
            }
            .review-disable {
                darken-text-on-hover($buttonColorGray, $buttonHoverStateDarken);
            }
        }
    }
}
