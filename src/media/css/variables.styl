// Font
$open-stack = "Open Sans", "Helvetica Neue", Arial, sans-serif;
$baseFontFamily = $open-stack;
$inputFontFamily = $open-stack;
$codeFontFamily = monospace, sans-serif;

// Type
$baseFontSize = 14;
$baseLine = 21;  // e.g. baseFontSize * 1.5

// Heading
$h1 = 36;
$h2 = 30;
$h3 = 24;
$h4 = 18;
$h5 = 16;
$h6 = 14;

// Grid
$gridWidth = 940;
$gridGutterWidth = 30;

// Misc sizes
$listsLeft = 2em;
$columnarWidth = 150px;
$columnarMargin = 20px;

// Font sizes
$bigFontSize = 1.2em;
$smallFontSize = 0.85em;
$superSmallFontSize = 0.7em;


// FloatingImages
$floatingMargin = 1em;
$floatingBackgroundColor = #fff;
$floatingPadding = 0;
$floatingBorder = none;

// LinkColor
$colorLink = #369;
$colorLinkHover = #900;

// TextColor
$colorBlack = #000;
$colorDarkerGray = #222;
$colorGrayDark = #555;
$colorGray = #777;
$colorGrayLight = #999;
$colorWhite = #fff;
$colorRed = #da3e5a;
$colorGreen = #18a011;

// BackgroundColor
$markBackgroundColor = #fe5;
$codeBackgroundColor = #f8f8f8;
$tfootBackgroundColor = #f2f2f2;
$colorStripedTable = #f8f8f8;
$colorHoveredTable = #f6f6f6;
$mainBackgroundColor = #f7f7f7;

// Legacy colors
$flamin-hot-cheetos-orange = #ff9500;
$sailor-blue = #0096dc;
$castle-skull-gray = #333;
$grey-gardens-gray = #4d4d4d;
$london-fog-gray = #5f5f5f;
$earl-gray = #a7a7a7;
$primer-gray = #b7b7b7;
$cement-gray = #c7c7c7;
$cloud-gray = #d7d7d7;
$seavan-salt-white = #e7e7e7;
$salt-flat-white = #f1f1f1;
$steam-white = #fffefe;

// Borders
$cellBorder = 1px solid #eee;
$cellBorderDark = 1px solid #ddd;
$fieldsetBorder = 1px solid #ddd;

// Util
$em = $baseFontSize * 1em;  // outputting ems, e.g. 14/$em

$retina = unquote('screen and (-webkit-min-device-pixel-ratio: 2), screen and (min--moz-device-pixel-ratio: 2), screen and (min-device-pixel-ratio: 2)');

$at-least-desktop = unquote('(min-width: 710px)');
$narrower-than-desktop = unquote('(max-width: 709px)');
