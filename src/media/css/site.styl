* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    //text-rendering: optimizeLegibility;
    word-wrap: break-word;
}

.js-hidden, .hidden {
    display: none;
}

noscript {
    background: $salt-flat-white;
    display: table;
    height: 100%;
    position: absolute;
    width: 100%;
    z-index: 100;
    p {
        background: url(../img/pretty/marketplace_logo.png) 50% 48% no-repeat;
        background-size: auto 60px;
        display: table-cell;
        font-weight: bold;
        height: 100%;
        padding-top: 60px;
        text-align: center;
        vertical-align: middle;
    }
}

a {
    text-decoration: none;
    color: $sailor-blue;

    &:hover {
        text-decoration: underline;
    }
    &:not([href]) {
        cursor: pointer;
    }
}

html, body {
    background: #11203D;
    height: 100%;
}

body {
    color: #333;
    // min-height needed so ff b2g/android can scroll to 0 (bug 872622).
    min-height: 300px;
    transform-origin: 50% 400px;
    transition: transform 1s;
    -webkit-transition: -webkit-transform 1s;
}

main {
    margin: 0 auto;
    margin-bottom: 40px;
    width: 1200px;
}

@media (max-width: 1199px) {
    main {
        margin-top: 60px;
    }
}

.site-header, .page {
    min-width: 320px;
    section.main {
        margin-left: auto;
        margin-right: auto;
        &:after {
            content: '';
            display: block;
            clear: both;
        }
        &.full {
            width: 100%;
            > div {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
}

.page {
    padding-bottom: 6px;
    position: relative;
}

[data-page-type~="leaf"] .page {
    background: $colorWhite;
    margin-bottom: 6px;
    padding: 40px 35px;
    h1 {
        color: $colorBlack;
    }
    h2 {
        color: $colorGrayDark;
        font-size: 24px;
        line-height: 26px;
    }
}

table {
    border-collapse: separate;
}

.row {
    clear: both;
}

.detailed-error, .fragment-error {
    background: #fff;
}

.detailed-error {
    padding: 15px;
}

.fragment-error b {
    margin-right: 5px;
}

.page > .overlay {
    max-width: 100%;
}

.two-up {
    width: 50%;
    float: left;

    &:nth-child(2n+1) {
        padding: 0 5px 0 0;
    }
    &:nth-child(2n) {
        padding: 0 0 0 5px;
    }
    .button {
        display: block;
    }
}

.only-logged-in {
    display: none !important;
}

.only-logged-out {
    display: block;
}

.logged-in .only-logged-in {
    display: block !important;
}

.logged-in .only-logged-out {
    display: none !important;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0turn); }
    to { -webkit-transform: rotate(1turn); }
}
@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

@media $retina {
    .spinner {
        spinner-base-image('retina');
        &.alt {
            spinner-alt-image('retina');
        }
    }
}

.btn, .spinner-container {
    position: relative;
    .spinner {
        btn-spinner-size(20px);
        left: 50%;
        position: absolute;
        top: 50%;
    }
    &.btn-big .spinner {
        btn-spinner-size(35px);
    }
    &.btn-small .spinner {
        btn-spinner-size(15px);
    }
}

.badge {
    color: #fff;
    display: inline-block;
    font-family: FontAwesome;
    height: 2em;
    line-height: 2em;
    margin: 0.75em 0.5em;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 0 5px #0ff;
    width: 2em;

    &:before, &:after {
        border: 1px solid #fff;
        bottom: 0;
        box-shadow: 0 0 5px #0ff, inset 0 0 10px #0aa;
        content: "";
        display: block;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        transition: unquote('transform 0.5s');
        -webkit-transition: unquote('-webkit-transform 0.5s');
    }
    &:before {
        transform: rotate(10deg);
    }
    &:after {
        transform: rotate(-10deg);
    }
}

.badge:hover,
a:hover .badge {
    text-decoration: none;

    &:before { transform: rotate(25deg); }
    &:after { transform: rotate(-25deg); }
}

.avatar {
    background: #fff no-repeat;
    background-size: contain;
    border-radius: 32px;
    box-shadow: 0 0 2px rgba(0,0,0,.8) inset;
    display: inline-block;
    height: 32px;
    width: 32px;
}

[data-page-type="debug"] .page {
    background: #fff;
    padding: 35px;
}

[data-page-type="root"],
[data-page-type="game"] {
    .page {
        padding: 30px 0;
    }
    .right-container {
        background-color: rgba(255,255,255,0.4);
        box-shadow: 0 5px 10px 0 rgba(0,0,0,0.75);
        padding-top: 20px;
    }
    .arrow {
        cursor: pointer;
        height: 20px;
        margin-top: 20px;
        position: relative;
        &:before {
            border-style: solid;
            border-width: 20px 50px 0 50px;
            border-color: rgba(255,255,255,0.5) transparent transparent transparent;
            content: "";
            height: 0;
            left: 50%;
            margin-left: -50px;
            position: absolute;
            top: 0;
            width: 0;
        }
        &:hover:before {
            border-color: rgba(255,255,255,0.8) transparent transparent transparent;
        }
    }
}
